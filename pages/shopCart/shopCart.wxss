/* pages/shopCart/shopCart.wxss */

.goods-item {
    position: relative;
    width: 100%;
    box-sizing: border-box;
    height: 170rpx;
}

.main-container {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  /* border: 1px solid black; */
}

.main-container .check-item {
  flex-basis: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  /* position: relative; */
}

.main-container .check-item image {
  width: 40rpx;
  height: 40rpx;
}

.goods-item-main {
  position: relative;
  display: flex;
  flex-grow: 1;
  box-sizing: border-box;
  height: 100%;
  padding: 20rpx 0;
  overflow: hidden;
  border-bottom: 1px solid #eeeeee;
  /* flex-basis: 400rpx; */
}

.goods-item-main .thumbnail {
  width: 200rpx;
  max-height: 100%;
  flex-shrink: 0;
  flex-grow: 0;
}

.goods-item-main .fields {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
}

