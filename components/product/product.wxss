product-card {
  position: relative;
  width: 220rpx;
  margin: 0 0 25rpx 25rpx;
  box-sizing: border-box;
  display: inline-block;
}

.image-container {
  position: relative;
  width: 100%;
  height: 220rpx;
}

.image-container image {
  width: 100%;
  height: 100%;
  background: #f9f9f9;
}

.goods-title {
  margin: 10rpx 0;
  padding: 0 10rpx;
  font-size: 24rpx;
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  box-sizing: border-box;
}

.price-container {
  color: #ff3456;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}