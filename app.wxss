/**app.wxss**/
page {
  background-color: #fafafa;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.item-label {
  font-size: 28rpx;
  color: #333;
}

.item-label.xs {
  font-size: 26rpx;
}

.item-label.md {
  font-size: 30rpx;
}

.item-label.grey {
  color: #999;
}

image.dot {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

.text-wrap {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.price {
  color: #ff3456;
}